{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "./hardhat.config.ts",
    "./scripts/**/*",
    "./ignition/**/*",
    "./test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}